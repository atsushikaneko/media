<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Simple Blog", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "記事を書く", new_blog_path %></li>
        <li><%= link_to "トップページ", root_path %></li>
        <li><%= link_to "ヘルプ", help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイブログ", current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><a data-toggle="modal" data-target="#testModal">ログイン</a></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


<!-- ボタン・リンククリック後に表示される画面の内容 -->
<div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
  <div class="form_area">
  <h1>Login</h1>
  <%= form_for(:session, url: login_path) do |f| %>
  <%= f.email_field :email, placeholder:"Username",class: 'form-control' %>
  <%= f.password_field :password, placeholder:"Password", class: 'form-control' %>
  <%= link_to "(forgot password)", new_password_reset_path %>
  <%= f.submit "Log in", class: "btn btn-primary" %>

  <%= f.label :remember_me, class: "checkbox inline" do %>
<%= f.check_box :remember_me %>
<span>Remember me on this computer</span>
<% end %>
  <% end %>
  <span> New user? <%= link_to "Sign up now!", signup_path %> </span>
</div>

            </div>
        </div>
    </div>
