<% if current_user %>
  <% unless blog.like_user(current_user.id).blank? %>
    <%= link_to user_blog_like_path(user_id: blog.user.id,blog_id: blog.id ,id: blog.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        いいね<i class="material-icons red-text">favorite</i>
        <span class="red-text">
          <%= blog.likes_count %>
        </span>
      </div>
    <% end %>
  <% else %>
    <%= link_to user_blog_likes_path(blog.user.id,blog.id), method: :post, remote: true do %>
      <div class="vertical_like">
        いいね<i class="material-icons grey-text text-darken-2">favorite_border</i>
        <span class="grey-text text-darken-2">
          <%= blog.likes_count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>
  <% if blog.likes_count > 0 %>
    <div class="vertical_like">
      <i class="material-icons red-text">favorite</i>
      <span class="red-text">
        <%= blog.likes_count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      <i class="material-icons grey-text text-darken-2">favorite_border</i>
      <span class="grey-text text-darken-2">
        <%= blog.likes_count %>
      </span>
    </div>
  <% end %>

<% end %>
